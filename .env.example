# Variáveis de ambiente necessárias para o projeto Ludus

# MongoDB
MONGO_URI=mongodb+srv://seu_usuario:sua_senha@cluster.mongodb.net/ludus?retryWrites=true&w=majority

# Sessão (use uma string aleatória segura em produção)
SESSION_SECRET=sua_chave_secreta_aleatoria_aqui

# Admin padrão
ADMIN_EMAIL=admin@ludus.local
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrador
ADMIN_INSTITUICAO=Ludus

# Token para seed do admin (proteção)
ADMIN_SEED_TOKEN=seu_token_secreto_aqui

# Ambiente
NODE_ENV=production

# Cloudinary (obrigatório para upload de imagens no Vercel)
# Crie uma conta gratuita em https://cloudinary.com
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=seu_cloud_name
CLOUDINARY_API_KEY=sua_api_key
CLOUDINARY_API_SECRET=seu_api_secret
